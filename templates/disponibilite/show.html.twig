{# templates/disponibilite/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de la Disponibilité{% endblock %}

{% block body %}
<h1>Détails de la Disponibilité</h1>
<ul>
    <li>Véhicule: {{ disponibilite.vehicule.marque }} {{ disponibilite.vehicule.modele }}</li>
    <li>Date de début: {{ disponibilite.dateDebut|date('Y-m-d H:i') }}</li>
    <li>Date de fin: {{ disponibilite.dateFin|date('Y-m-d H:i') }}</li>
    <li>Prix par jour: {{ disponibilite.prixParJour }}</li>
    <li>Statut: {{ disponibilite.statut ? 'Disponible' : 'Non disponible' }}</li>
</ul>

<a href="{{ path('disponibilite_edit', {'id': disponibilite.id}) }}">Éditer</a>

<form action="{{ path('disponibilite_delete', {'id': disponibilite.id}) }}" method="post" onsubmit="return confirm('Are you sure?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ disponibilite.id) }}">
    <button type="submit">Supprimer</button>
</form>

<a href="{{ path('disponibilite_index') }}">Retour à la liste</a>
{% endblock %}
