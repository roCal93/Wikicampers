{# templates/disponibilite/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Disponibilités{% endblock %}

{% block body %}
<h1>Liste des Disponibilités</h1>
<table>
    <thead>
        <tr>
            <th>Véhicule</th>
            <th>Date de Début</th>
            <th>Date de Fin</th>
            <th>Prix Par Jour</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for disponibilite in disponibilites %}
            <tr>
                <td>{{ disponibilite.vehicule.marque }} {{ disponibilite.vehicule.modele }}</td>
                <td>{{ disponibilite.dateDebut|date('Y-m-d H:i') }}</td>
                <td>{{ disponibilite.dateFin|date('Y-m-d H:i') }}</td>
                <td>{{ disponibilite.prixParJour }}</td>
                <td>{{ disponibilite.statut ? 'Disponible' : 'Non disponible' }}</td>
                <td>
                    <a href="{{ path('disponibilite_show', {'id': disponibilite.id}) }}">Voir</a>
                    <a href="{{ path('disponibilite_edit', {'id': disponibilite.id}) }}">Éditer</a>
                    <form action="{{ path('disponibilite_delete', {'id': disponibilite.id}) }}" method="post" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ disponibilite.id) }}">
                        <button type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune disponibilité trouvée</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('disponibilite_new') }}">Créer une nouvelle disponibilité</a>
{% endblock %}
